generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int        @id @default(autoincrement())
  courseId   Int?
  email      String     @unique
  fullname   String
  nickname   String
  password   String
  authStatus AuthStatus @default(UNAUTHENTICATED)
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  lessons    Lesson[]
  course     Course?      @relation(fields: [courseId], references: [id])
  Enrollment Enrollment[]
}

model Teacher {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  lessons Lesson[]
}

model Course {
  id               Int            @id @default(autoincrement())
  name             String
  description      String
  associatedCenter TeachingCenter
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt

  enrolledStudents User[]
}

model Lesson {
  id         Int      @id @default(autoincrement())
  teacherId  Int
  scheduleId Int
  code       String   @unique
  subject    String
  local      String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  enrolledStudents User[]
  teacher          Teacher      @relation(fields: [teacherId], references: [id])
  Enrolment        Enrollment[]
}

model Enrollment {
  userId    Int
  lessonId  Int
  user      User     @relation(fields: [userId], references: [id])
  lesson    Lesson   @relation(fields: [lessonId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@id([userId, lessonId])
  @@map("user_lessons")
}

model Schedule {
  id        Int      @id @default(autoincrement())
  lessonId  Int
  weekDay   WeekDay
  startTime DateTime
  endTime   DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum WeekDay {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
}

enum TeachingCenter {
  CETEC
  CCAB
}

enum AuthStatus {
  AUTHENTICATED
  UNAUTHENTICATED
  PENDING
  BLOCKED
}
